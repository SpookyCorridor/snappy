<%= @gallery.title %> 

<div id="paintings">
	<% @gallery.pictures.each do |picture| %>
		<div class="painting">
			<%= image_tag picture_image_url.to_s %> 
		</div> 
		<div class="title"><%= picture.title %></div>
		<div class="actions">
			<%= link_to 'edit', picture_update_path(painting) %> 
			<%= link_to 'remove', picture, :confirm => 'Are you sure?', :method => :delete %>
		</div>
</div>
<% end %> 

<p>
	<%= link_to 'Add a picture', pictures_new_path(:gallery_id => @gallery) %> 
	<%= link_to 'view galleries', galleries_path %> 
</p>