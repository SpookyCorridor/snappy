<% title @gallery.name %> 

<div id="paintings">
	<% @gallery.paintings.each do |painting| %>
		<div class="painting">
			<%= image_tag painting_image_url.to_s %> 
		</div> 
		<div class="title"><%= painting.title %></div>
		<div class="actions">
			<%= link_to 'edit', picture_update_path(painting) %> 
			<%= link_to 'remove', painting, :confirm => 'Are you sure?', :method => :delete %>
		</div>
</div>
<% end %> 

<p>
	<%= link_to 'Add a painting', picture_new_path(:gallery_id => @gallery) %> 
	<%= link_to 'view galleries', galleries_index_path %> 
</p>